{
  "name": "@mvr-studio/qcms",
  "author": "Tomasz Marciniak <tomek@mvr.studio>",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && mkdir ./dist && yarn generate && tsc && tsc-alias",
    "start": "micro ./dist",
    "dev": "yarn build && concurrently \"tsc -w\" \"micro ./dist\"",
    "generate:nexus": "ts-node --transpile-only server/schema",
    "generate:schema": "chmod +x dist/prepare.js && dist/prepare.js && npx prisma format",
    "generate:db": "cp -r ./prisma ./dist/prisma && npx prisma db push",
    "generate": "yarn generate:nexus && yarn generate:schema",
    "test:unit": "jest",
    "studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "@vercel/node": "^1.13.0",
    "apollo-server-core": "^3.6.3",
    "apollo-server-micro": "^3.6.3",
    "apollo-server-plugin-http-headers": "^0.1.4",
    "bcrypt": "^5.0.1",
    "cookie": "^0.4.2",
    "dayjs": "^1.10.8",
    "dedent": "^0.7.0",
    "dotenv": "^16.0.0",
    "graphql": "^16.3.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
    "look-up": "^0.8.3",
    "micro": "^9.3.4",
    "micro-cookie": "^1.2.0",
    "micro-cors": "^0.1.1",
    "nexus": "^1.2.0",
    "pluralize": "^8.0.0",
    "write": "^2.0.0",
    "zod": "^3.13.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.4.1",
    "@types/dedent": "^0.7.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/micro": "^7.3.6",
    "@types/node": "^17.0.21",
    "@types/pluralize": "^0.0.29",
    "@types/write": "^2.0.1",
    "concurrently": "^7.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsc-alias": "^1.6.3",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "prisma": {
    "schema": "dist/prisma/schema.prisma"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
